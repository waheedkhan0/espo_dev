{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true
        },
        "version": {
            "type": "varchar",
            "required": true,
            "maxLength": 50
        },
        "fileList": {
            "type": "jsonArray"
        },
        "description": {
            "type": "text"
        },
        "isInstalled": {
            "type": "bool",
            "default": false
        },
        "checkVersionUrl": {
            "type": "url"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    }
}
