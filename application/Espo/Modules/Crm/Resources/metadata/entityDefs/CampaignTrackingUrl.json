{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true
        },
        "url": {
            "type": "url",
            "tooltip": true
        },
        "urlToUse": {
            "type": "varchar",
            "notStorable": true,
            "readOnly": true
        },
        "campaign": {
            "type": "link"
        },
        "action": {
            "type": "enum",
            "options": ["Redirect", "Show Message"],
            "default": "Redirect"
        },
        "message": {
            "type": "text",
            "tooltip": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "campaign": {
            "type": "belongsTo",
            "entity": "Campaign",
            "foreign": "trackingUrls"
        }
    },
    "collection": {
        "orderBy": "name",
        "order": "asc"
    }
}
